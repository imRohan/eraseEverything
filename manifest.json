{
  "manifest_version": 2,
  "name": "Hide Everything",
  "author": "Rohan Likhite",
  "description": "A simple extensions which hides elements on a given web page.",
  "homepage_url": "https://github.com/imRohan/hideEverything",
  "icons": {"128": "images/icon.png" },
  "version": "0.1",
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["scripts/hide.js"]
    }
  ]
}

